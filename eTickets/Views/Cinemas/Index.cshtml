@model IEnumerable<Cinema>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Cinema";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.Logo)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var cinema in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@cinema.Logo"
                             alt="@cinema.Name" style="max-width: 150px"/>
                    </td>
                    <td class="align-middle">@cinema.Name</td>
                    <td class="align-middle">@cinema.Description</td>
                    <td>
                        <a class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square">
                                Edit
                            </i>
                        </a>
                        |
                        <a class="btn btn-outline-info">
                            <i class="bi bi-pencil-eye">
                                Details
                            </i>
                        </a>
                        |
                        <a class="btn btn-danger text-white">
                            <i class="bi bi-trash">
                                Delete
                            </i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>